<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.kevincyt.toskeys.gui.menubar.MenubarPresenter">
	<menus>
		<Menu mnemonicParsing="false" text="File">
			<items>
				<MenuItem mnemonicParsing="false" text="Open hotkeys..." onAction="#openHotkeyFile"/>
				<SeparatorMenuItem mnemonicParsing="false" />
				<MenuItem mnemonicParsing="false" text="Save hotkeys" onAction="#saveHotkeys"/>
				<SeparatorMenuItem mnemonicParsing="false" />
				<MenuItem mnemonicParsing="false" text="Save hotkeys As..." onAction="#saveHotkeysAs"/>
				<SeparatorMenuItem mnemonicParsing="false" />
				<MenuItem mnemonicParsing="false" text="Quit" onAction="#quitApplication"/>
			</items>
		</Menu>
	</menus>
</MenuBar>

